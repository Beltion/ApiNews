<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ApiNews" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="android:colorBackground">@color/primary_light</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorError">@color/red</item>

    </style>

    <style name="ArticlesCardStyle" >
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="ArticlesCardStyle.PrimaryText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ArticlesCardStyle.SecondaryText">
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="ArticlesCardStyle.Link">
        <item name="android:textColor">@color/blue</item>
    </style>
</resources>